<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>登陆</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <style>
      .error,
      .success {
        display: none;
      }
    </style>
  <body>
           <% include header.ejs %>
          <div class="container">
          <form>
            <h2 class="text-center">请登陆</h2>
            <div class="form-group">
              <label for="username">用户名</label>
              <input type="text" class="form-control" name="username" id="username" placeholder="请输入用户名">
            </div>
            <div class="form-group">
              <label for="password">密码</label>
              <input type="password" class="form-control" name="password" id="password" placeholder="请输入密码">
            </div>
            <button type="button" class="btn btn-default" id="login">登陆</button>
          </form>
           <!-- 提示 -->
           <div class="alert alert-danger error">
           
           </div>
           <div class="alert alert-success success"></div>
          </div> <!-- /container -->

    <script src="/js/jquery-3.2.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script>
      $(function(){
        $('#login').on('click', function(event) {
          $.ajax({
            url: '/checkLogin',
            type: 'POST',
            dataType: '',
            data: {
              username: $('#username').val(),
              password: $('#password').val()
            }
          })
          .done(function(msg) {
            if (msg == 'noUser') {
              $('error').html('用户不存在').fadeIn().delay(3000).fadeOut();
            }else if (msg == 'noPsw') {
              $('.error').html('密码不对').fadeIn().delay(3000).fadeOut();
              return;
            }else if(msg == 'ok'){
              $('.success').html('恭喜登陆成功').fadeIn().delay(3000).fadeOut();
              setTimeout(function(){
                 // 跳转到首页
                 window.location = '/';
              },3000);
            }
          })
          .fail(function() {
            console.log("error");
          })
          .always(function() {
            console.log("complete");
          });
          
        });
      });
    </script>
  </body>
</html>