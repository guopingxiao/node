<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('common/head'); %>
  <title><%= title %></title>
</head>
<body>
  <%- include('common/header'); %>
  <div class="container">
    <div class="row">
      <!-- 全部分类 -->
      <% for (var i = 0; i < categories.length; i++) { -%>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3>
              <a href="/results?cat=<%= categories[i]._id %>&page=1"> <%= categories[i].name %>
              </a>
            </h3>
          </div>
          <div class="panel-body">
            <% if (categories[i].movies && categories[i].movies.length > 0) { -%>
                <!-- 该分类下的电影 -->
                <% for (var j = 0; j < categories[i].movies.length; j++) { -%>
                  <div class="col-md-2">
                    <div class="thumbnail">
                      <a href="/movie/<%= categories[i].movies[j]._id %>">
                        <img src="<%= categories[i].movies[j].poster %>" alt="<%= categories[i].movies[j].title%>">
                      </a>
                      <div class="caption">
                        <h3><%= categories[i].movies[j].title %></h3>
                        <p>
                          <a class="btn btn-primary" href="/movie/<%= categories[i].movies[j]._id %>">
                            观看影片
                          </a>
                        </p>
                      </div>
                    </div>
                  </div>
                <% } -%>
            <% } -%>
          </div>
        </div>
      <% } -%>
    </div>
  </div>
</body>
</html>