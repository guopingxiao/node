<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('common/head'); %>
  <title><%= title %></title>
</head>
<body>
  <%- include('common/header'); %>
  <div class="container">
    <div class="row">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>分类</th>
            <th>时间</th>
            <th>查看</th>
            <th>更新</th>
            <th>删除</th>
          </tr>
        </thead>
        <tbody>
          <% for (var i = 0; i < categories.length; i++) { -%>
            <tr class="item-id-<%= categories[i].id %>">
              <td><%= categories[i].name %></td>
              <td><%= moment(categories[i].meta.updateAt).format('MM/DD/YYYY')%></td>
              <td>
                <a target="_blank" href="../movie/<%= categories[i].id%>">查看</a>
              </td>
              <td>
                <a target="_blank" href="/admin/movie/update/<%= categories[i].id%>">修改</a>
              </td>
              <td>
                <button class="btn btn-danger del" type="button" 
                data-id="<%=categories[i].id%>">删除</button>
              </td>
            </tr>
          <% } -%>
        </tbody>
      </table>
    </div>
  </div>
  <!-- 引入删除的ajax的请求 -->
  <script src="/js/admin.js"></script>
</body>
</html>