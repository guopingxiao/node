<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('common/head'); %>
  <title><%= title %></title>
</head>
<body>
  <%- include('common/header'); %>
  <div class="container">
    <div class="row">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>用户名</th>
            <th>时间</th>
            <th>查看</th>
            <th>更新</th>
            <th>删除</th>
          </tr>
        </thead>
        <tbody>
          <% for (var i = 0; i < users.length; i++) { -%>
            <tr class="item-id-<%= users[i].id %>">
              <td><%= users[i].username %></td>
              <td><%= moment(users[i].meta.updateAt).format('MM/DD/YYYY')%></td>
              <td>
                <a target="_blank" href="../movie/<%= users[i].id%>">查看</a>
              </td>
              <td>
                <a target="_blank" href="/admin/update/<%= users[i].id%>">修改</a>
              </td>
              <td>
                <button class="btn btn-danger del" type="button" 
                data-id="<%=users[i].id%>">删除</button>
              </td>
            </tr>
          <% } -%>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>