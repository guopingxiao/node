<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('common/head'); %>
  <title><%= title %></title>
</head>
<body>
  <%- include('common/header'); %>
  <div class="container">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3><%= keyword %></h3>
        </div>
        <div class="panel-body">
          <% if (movies && movies.length > 0) { -%>
              <!-- 该分类下的电影 -->
              <% for (var i = 0; i < movies.length; i++) { -%>
                <div class="col-md-2">
                  <div class="thumbnail">
                    <a href="/movie/<%= movies[i]._id %>">
                      <img src="<%= movies[i].poster %>" alt="<%= movies[i].title%>">
                    </a>
                    <div class="caption">
                      <h3><%= movies[i].title %></h3>
                      <p>
                        <a class="btn btn-primary" href="/movie/<%= movies[i]._id %>">
                          观看影片
                        </a>
                      </p>
                    </div>
                  </div>
                </div>
              <% } -%>
          <% } -%>
        </div>
      </div>
      <!-- 分页列表 -->
      <ul class="pagination">
        <% for (var j = 1; j < totalPage +1 ; j++) { -%>
            <% if (currentPage == j) { -%>
                <li class="active">
                  <span><%= currentPage %></span>
                </li>
            <% } else { -%>
              <% if (category != null) { -%>
                <li>
                  <a href="/results/?cat=<%=category._id%>&page=<%=j%>">
                    <%= j %>
                  </a>
                </li>
              <% } else { -%>
                <li>
                  <a href="/results?q=<%=keyword%>&page=<%=j%>">
                    <%= j %>
                  </a>
                </li>
              <% } -%>
            <% } -%>
        <% } -%>
      </ul>
    </div>
  </div>
</body>
</html>